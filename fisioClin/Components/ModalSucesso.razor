<div class="modal-backdrop @( _visivel ? "show" : "hide")">
    <div class="modal-content">
        <h4>@Mensagem</h4>
        <button class="btn btn-maroon mt-3" @onclick="Fechar">Fechar</button>
    </div>
</div>

@code {
    private bool _visivel = false;

    [Parameter]
    public string Mensagem { get; set; } = "Operação realizada com sucesso!";

    public void Mostrar()
    {
        _visivel = true;
        StateHasChanged();
    }

    public void Fechar()
    {
        _visivel = false;
        StateHasChanged();
    }
}


<style>
    .modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.55);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1050;
    }

        /* visibilidade controlada por classe */
        .modal-backdrop.hide {
            display: none;
        }

        .modal-backdrop.show {
            display: flex;
        }

    .modal-content {
        background: #ffffff; /* branco puro */
        padding: 24px 32px;
        border-radius: 10px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 420px; /* limita a largura */
        text-align: center;
        transition: all 0.3s ease-in-out;
    }
</style>
