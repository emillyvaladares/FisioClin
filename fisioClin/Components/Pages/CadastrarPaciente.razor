@page "/cadastrarpaciente"
@using fisioClin.Models;
@inject PacienteDAO paciente

<main class="container my-4">
    <h2 class="text-maroon mb-4">Cadastrar Paciente</h2>

    <section class="position-relative p-4 bg-white rounded shadow-sm">
        <form>
            <div class="mb-3 position-relative">
                <label for="nome" class="form-label">Nome completo</label>
                <input type="text" id="nome" class="form-control" />

                <!-- Botão flutuante no canto superior direito -->
                <button type="button" class="btn btn-maroon rounded-circle position-absolute top-0 end-0 translate-middle"
                        style="width: 48px; height: 48px; font-size: 24px; line-height: 1;">
                    +
                </button>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    <label for="cpf" class="form-label">CPF</label>
                    <input type="text" id="cpf" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label for="cep" class="form-label">CEP</label>
                    <input type="text" id="cep" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label for="laudos" class="form-label">Laudos Médicos</label>
                    <input type="file" id="laudos" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label for="rg" class="form-label">RG</label>
                    <input type="text" id="rg" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label for="bairro" class="form-label">Bairro</label>
                    <input type="text" id="bairro" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label for="nascimento" class="form-label">Data de Nascimento</label>
                    <input type="date" id="nascimento" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label for="rua" class="form-label">Rua</label>
                    <input type="text" id="rua" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="numero" class="form-label">Número</label>
                    <input type="text" id="numero" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="sexo" class="form-label">Sexo</label>
                    <select id="sexo" class="form-select">
                        <option selected disabled>Selecione</option>
                        <option>Masculino</option>
                        <option>Feminino</option>
                        <option>Outro</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label for="telefone" class="form-label">Telefone</label>
                    <input type="tel" id="telefone" class="form-control" />
                </div>
            </div>

            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn btn-maroon">Cadastrar</button>
                <button type="reset" class="btn btn-secondary">Excluir</button>
            </div>
        </form>
    </section>
</main>

<style>
    .text-maroon {
        color: #6b0010;
    }

    .btn-maroon {
        background-color: #8b0015;
        color: white;
        border: none;
    }

        .btn-maroon:hover, .btn-maroon:focus {
            background-color: #a3001c;
            color: white;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover, .btn-secondary:focus {
            background-color: #5a6268;
            color: white;
        }
</style>
