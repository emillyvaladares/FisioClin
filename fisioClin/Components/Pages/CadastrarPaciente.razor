@page "/cadastrarpaciente"

@using fisioClin.Models
@inject PacienteDAO pacienteDAO
@inject NavigationManager nav

<PageTitle>Cadastrar Paciente</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Cadastrar Paciente</h1>

<div class="container mt-4">
    <div class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" @bind="paciente.Nome" />
        </div>

        <div class="mb-3">
            <label class="form-label">CPF</label>
            <input type="text" class="form-control" @bind="paciente.Cpf" />
        </div>

        <div class="mb-3">
            <label class="form-label">RG</label>
            <input type="text" class="form-control" @bind="paciente.Rg" />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" @bind="paciente.Email" />
        </div>

        <div class="mb-3">
            <label class="form-label">Telefone</label>
            <input type="tel" class="form-control" @bind="paciente.Telefone" />
        </div>

        <div class="mb-3">
            <label class="form-label">ID Endereço</label>
            <input type="number" class="form-control" @bind="paciente.Id_end_fk" />
        </div>

        <button class="btn btn-primary" @onclick="CadastraPaciente">Cadastrar</button>
        <button class="btn btn-secondary ms-2" @onclick="Voltar">Voltar</button>
    </div>
</div>

@code {
    private Paciente paciente = new();

    private void CadastraPaciente()
    {
        try
        {
            pacienteDAO.Inserir(paciente);
            nav.NavigateTo("/pacientes"); // redireciona pra lista
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao cadastrar paciente: {ex.Message}");
        }
    }

    private void Voltar()
    {
        nav.NavigateTo("/pacientes");
    }
}
