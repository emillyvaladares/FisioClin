@page "/salas"

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Salas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f4f4; /* Fundo suave */
            font-family: 'Segoe UI', sans-serif;
        }

        .section-container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            margin: 50px auto;
            max-width: 700px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #6b0a0a; /* Tom vinho escuro do título */
            margin-bottom: 30px;
        }

        .custom-btn {
            background-color: #6b0a0a;
            color: white;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            padding: 20px 40px;
            margin: 10px;
            min-width: 200px;
            font-size: 18px;
            transition: 0.3s;
        }

            .custom-btn:hover {
                background-color: #8c0d0d;
            }

        .button-row {
            display: flex;
            flex-wrap: wrap;
            justify-content: start;
            gap: 20px;
        }
    </style>
</head>
<body>
    <div class="container section-container">
        <h2>Salas</h2>
        <div class="button-row">
            <button class="custom-btn">Cadastrar Salas</button>
            <button class="custom-btn">Reservar Sala</button>
            <button class="custom-btn">Consultar Salas</button>
        </div>
    </div>
</body>
</html>
