@page "/reservarsala"

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservar Salas</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #ffffff;
            font-family: 'Poppins', sans-serif;
        }

        .navbar {
            background-color: #6a0000;
        }

        .navbar-nav .nav-link {
            color: white !important;
            background-color: #8b0000;
            border-radius: 8px;
            margin-right: 10px;
            padding: 8px 16px;
            font-weight: 500;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #a00000;
            }

        .container-custom {
            background-color: #fff;
            border-radius: 15px;
            padding: 40px;
            margin-top: 50px;
            box-shadow: 0 4px 25px rgba(0,0,0,0.15);
            max-width: 950px;
        }

        h2 {
            color: #6a0000;
            font-weight: 600;
        }

        label {
            font-weight: 500;
            color: #333;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #ccc;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #8b0000;
                box-shadow: 0 0 5px rgba(139, 0, 0, 0.4);
            }

        .icon-area {
            display: flex;
            justify-content: center;
            align-items: center;
            background: radial-gradient(circle, #7a0b0b 0%, #400000 90%);
            border-radius: 50%;
            width: 90px;
            height: 90px;
            margin-left: auto;
        }

            .icon-area i {
                color: white;
                font-size: 35px;
            }

        .btn-reservar {
            background-color: #8b0000;
            color: white;
            border-radius: 8px;
            padding: 10px 30px;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-reservar:hover {
                background-color: #a00000;
            }
    </style>
</head>
<body>

    <!-- CONTEÚDO -->
    <div class="container container-custom">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Reservar Salas</h2>
            <div class="icon-area">
                <i class="bi bi-door-closed-fill"></i>
            </div>
        </div>

        <form>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nome da sala</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Data da reserva</label>
                    <input type="date" class="form-control">
                </div>
            </div>

            <div class="row g-3 mt-1">
                <div class="col-md-6">
                    <label class="form-label">Nº da sala</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Hora de início</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                        <option>08:00</option>
                        <option>09:00</option>
                        <option>10:00</option>
                        <!-- Adicione mais opções -->
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Hora fim</label>
                    <input type="time" class="form-control">
                </div>
            </div>

            <div class="row g-3 mt-1">
                <div class="col-md-6">
                    <label class="form-label">Reservada por</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                        <!-- Lista de nomes -->
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Observações</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                        <!-- Opções como: Reunião, Entrevista, Evento etc. -->
                    </select>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-reservar">
                    <i class="bi bi-calendar-check"></i> Reservar
                </button>
            </div>
        </form>
    </div>

</body>
</html>
