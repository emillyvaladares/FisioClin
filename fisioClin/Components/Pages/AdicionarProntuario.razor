@page "/adicionarprontuarios"

<div class="container bg-light p-4 rounded shadow">
    <form>
        <!-- Dados do Paciente -->
        <div class="row mb-4">
            <div class="col-md-4">
                <label class="form-label fw-bold">Nome do Paciente</label>
                <input type="text" class="form-control" placeholder="Digite o nome do paciente" />
            </div>
            <div class="col-md-2">
                <label class="form-label fw-bold">Idade</label>
                <input type="number" class="form-control" placeholder="Idade" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Telefone</label>
                <input type="tel" class="form-control" placeholder="(xx) xxxxx-xxxx" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Data</label>
                <input type="date" class="form-control" />
            </div>
        </div>

        <!-- Informações Médicas -->
        <div class="border rounded p-3 mb-4">
            <h5 class="text-danger fw-bold">Alergias</h5>
            <textarea class="form-control mb-3" rows="2" placeholder="Citar alergias..."></textarea>

            <h5 class="text-danger fw-bold">Comorbidades</h5>
            <textarea class="form-control mb-3" rows="2" placeholder="Citar comorbidades..."></textarea>

            <h5 class="text-danger fw-bold">Doenças Prévias</h5>
            <textarea class="form-control mb-3" rows="2" placeholder="Citar doenças prévias..."></textarea>

            <h5 class="text-danger fw-bold">Histórico Familiar</h5>
            <textarea class="form-control mb-3" rows="2" placeholder="Citar histórico familiar..."></textarea>

            <h5 class="text-danger fw-bold">Hábitos de Vida</h5>
            <textarea class="form-control mb-3" rows="2" placeholder="Descrever hábitos de vida..."></textarea>
        </div>

        <!-- Avaliação Inicial -->
        <div class="mb-4">
            <h5 class="fw-bold">Avaliação Inicial</h5>
            <textarea class="form-control" rows="4" placeholder="Descrever observações iniciais..."></textarea>
        </div>

        <!-- Botões -->
        <div class="d-flex justify-content-end gap-2">
            <button type="reset" class="btn btn-outline-secondary">
                Limpar
            </button>
            <button type="submit" class="btn btn-danger">
                Adicionar Prontuário
            </button>
        </div>
    </form>
</div>

<style>
    h3 {
        color: #7a001f;
    }

    .form-label {
        color: #4d0b0b;
    }

    textarea, input {
        border-color: #a21c1c !important;
    }

    .btn-danger {
        background-color: #7a001f;
        border-color: #7a001f;
    }

    .btn-danger:hover {
        background-color: #590016;
        border-color: #590016;
    }
</style>

