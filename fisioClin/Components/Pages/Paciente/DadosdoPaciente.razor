@page "/dadospaciente/{Id:int}"
@using fisioClin.Models
@inject PacienteDAO pacienteDAO
@inject NavigationManager NavManager

@code {
    [Parameter]
    public int Id { get; set; }

    public Paciente Paciente { get; set; } = new Paciente();

    protected override void OnInitialized()
    {
        Paciente = pacienteDAO.BuscarPorId(Id);
        if (Paciente == null)
            Paciente = new Paciente();
    }
}

<div class="container mt-4">

    <!-- TÍTULO -->
    <div class="d-flex align-items-center mb-4">
        <h3 class="fw-bold" style="color:#701a1a;">Dados do Paciente</h3>

        <input type="text"
               class="form-control ms-3"
               style="max-width: 80px;"
               readonly
               value="@Id" />

        <input type="text"
               class="form-control ms-2"
               readonly
               value="@Paciente.Nome" />
    </div>

    <!-- CARD PRINCIPAL -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            <div class="row">
                <div class="col-md-9">

                    <!-- Nome -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nome Completo</label>
                        <input type="text" class="form-control" readonly value="@Paciente.Nome" />
                    </div>

                    <!-- CPF / CEP -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">CPF</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Cpf" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">CEP</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Cep" />
                        </div>
                    </div>

                    <!-- RG / Bairro -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">RG</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Rg" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Bairro</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Bairro" />
                        </div>
                    </div>

                    <!-- Nascimento / Rua -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Data de Nascimento</label>
                            <input type="text" class="form-control" readonly
                                   value="@Paciente.DataNascimento?.ToString("dd/MM/yyyy")" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Rua</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Rua" />
                        </div>
                    </div>

                    <!-- Sexo / Número -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Sexo</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Sexo" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Número</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Numero" />
                        </div>
                    </div>

                    <!-- Email / Telefone -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Email" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Telefone</label>
                            <input type="text" class="form-control" readonly value="@Paciente.Telefone" />
                        </div>
                    </div>

                </div>

                <!-- ÍCONE PADRONIZADO -->
                <div class="col-md-3 d-flex flex-column align-items-center mt-3 mt-md-0">
                    <i class="bi bi-person-circle"
                       style="font-size: 130px; color: #701a1a;"></i>
                </div>

            </div>

        </div>
    </div>
</div>
