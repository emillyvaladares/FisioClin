@page "/consultarcargo"
@using fisioClin.Models
@inject CargoDAO cargoDAO
@inject NavigationManager NavManager

@code {
    private List<Cargo> cargos = new();
    private string nomeBusca = "";

    protected override void OnInitialized()
    {
        cargos = cargoDAO.ListarTodos();
    }

    private void FiltrarCargos()
    {
        var todos = cargoDAO.ListarTodos();

        if (string.IsNullOrWhiteSpace(nomeBusca))
        {
            cargos = todos;
        }
        else
        {
            var termo = nomeBusca;
            cargos = todos
                .Where(c => c.Nome != null && c.Nome.Contains(termo, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }

        StateHasChanged();
    }

    private void EditarCargo(int id)
    {
        NavManager.NavigateTo($"/cadastrarcargo/{id}");
    }
}

<div class="paciente-container mt-4">
    <h3 class="titulo mb-4">Consultar Cargos</h3>

    <div class="barra-pesquisa mb-3">
        <div class="input-group">
            <span class="input-group-text">🔍</span>
            <input type="text" class="form-control campo-pesquisa" placeholder="Pesquisar Cargo"
                   @bind="nomeBusca" @bind:event="oninput" @onkeyup="FiltrarCargos" />
        </div>
    </div>

    <table class="table tabela-pacientes">
        <thead>
            <tr>
                <th class="id-header">ID</th>
                <th class="nome-header">Nome do Cargo</th>
                <th class="acoes-header">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (cargos == null || cargos.Count == 0)
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">Nenhum cargo cadastrado.</td>
                </tr>
            }
            else
            {
                @foreach (var c in cargos)
                {
                    <tr class="linha-paciente">
                        <td class="id-col">@c.Id</td>
                        <td class="nome-col-botao-wrapper">@c.Nome</td>
                        <td>
                            <button class="btn-edit me-2" @onclick="() => EditarCargo(c.Id)">Editar</button>
                        
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-end mt-3">
        <a href="/cadastrarcargo" class="btn-cadastrar">Cadastrar Cargo</a>
    </div>
</div>

