
@page "/controledepagamento"

    <!DOCTYPE html>
    <html lang="pt-BR">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Controle de Pagamentos</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container">
            <h2>Controle de Pagamentos</h2>
            <form>
              
                <div class="mb-3">
                    <label for="paciente" class="form-label">Paciente</label>
                    <select class="form-select" id="paciente">
                        <option selected>Selecione</option>
                    </select>
                </div>

               
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="data" class="form-label">Data de Pagamento</label>
                        <input type="date" class="form-control" id="data" />
                    </div>
                    <div class="col-md-4">
                        <label for="parcelas" class="form-label">Número de Parcelas</label>
                        <select class="form-select" id="parcelas">
                            <option selected>Selecione</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="valor" class="form-label">Valor total a pagar</label>
                        <input type="text" class="form-control" id="valor" placeholder="R$ 0,00" />
                    </div>
                </div>

               
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="forma" class="form-label">Forma de Pagamento</label>
                        <select class="form-select" id="forma">
                            <option selected>Selecione</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="status" class="form-label">Status do Pagamento</label>
                        <select class="form-select" id="status">
                            <option selected>Selecione</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Comprovante</label>
                        <img src="comprovante.png" alt="Comprovante" class="comprovante-img mt-2" />
                    </div>
                </div>

               
                <div class="mb-3">
                    <label for="obs" class="form-label">Observações</label>
                    <textarea class="form-control" id="obs" rows="4" placeholder="Digite aqui..."></textarea>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-confirmar">Confirmar</button>
                    <button type="reset" class="btn btn-secondary">Cancelar</button>
                </div>
            </form>
        </div>

     
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
     <style>
        body {
            background-color: #f5f5f5;
        }

        .container {
            max-width: 900px;
            background-color: #fff;
            border-radius: 12px;
            padding: 30px;
            margin-top: 50px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h2 {
            color: #7a1b1b;
            margin-bottom: 30px;
        }

        .comprovante-img {
            max-width: 100%;
            border: 1px solid #dee2e6;
            border-radius: 6px;
        }

        textarea {
            resize: vertical;
        }

        .btn-confirmar {
            background-color: #7a1b1b;
            color: #fff;
            border: none;
        }

            .btn-confirmar:hover {
                background-color: #5e1515;
            }
     </style>




