@page "/tipo_consulta"
@using fisioClin.Models
@inject TipoDAO TipoDAO
@inject NavigationManager NavigationManager

@rendermode InteractiveServer

@code {
    private List<Tipo> tipos = new();

    protected override void OnInitialized()
    {
        tipos = TipoDAO.ListarTodos();
    }

    private void Excluir(int id)
    {
        TipoDAO.Excluir(id);
        tipos = TipoDAO.ListarTodos();
    }
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-maroon">Consultar Tipos</h3>

        <a href="/cadastrar_tipo" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Cadastrar
        </a>
    </div>

    <!-- Tabela -->
    <div class="table-responsive shadow-sm rounded overflow-hidden">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="bg-maroon text-white">
                <tr>
                    <th style="width:80px;">ID</th>
                    <th>Nome</th>
                    <th class="text-end" style="width:200px;">Ações</th>
                </tr>
            </thead>

            <tbody>
                @if (tipos == null || tipos.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            Nenhum tipo encontrado.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var tipo in tipos)
                    {
                        <tr>
                            <td class="text-secondary">@tipo.Id</td>

                            <td class="p-0">                              
                                @tipo.Nome                               
                            </td>

                            <td class="text-end">
                                <a href="/editar_tipo/@tipo.Id" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <button class="btn btn-danger btn-sm" @onclick="() => Excluir(tipo.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>

<style>
    .text-maroon {
        color: #6b0f0f;
    }

    .bg-maroon {
        background-color: #6b0f0f !important;
    }
</style>
