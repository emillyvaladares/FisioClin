        }

        .tabela-pacientes th {
            font-weight: 600;
            padding: 12px 15px;
            text-align: left;
        }

        .tabela-pacientes td {
            padding: 0;
            border-top: 1px solid #eee;
        }

        .tabela-pacientes tbody tr:last-child td {
            border-bottom: none;
        }

    .id-header {
        width: 80px;
        text-align: center;
    }

    .nome-header {
        text-align: left;
    }

    .id-col {
        padding: 12px 15px;
        width: 80px;
        text-align: center;
        color: #777;
