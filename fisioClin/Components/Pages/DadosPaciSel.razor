        }

    .btn-cadastrar {
        background-color: var(--cor-principal);
        color: #fff;
        font-weight: 600;
        padding: 10px 25px;
        border-radius: 8px;
        text-decoration: none;
        border: none;
        box-shadow: 0 4px 8px rgba(107, 15, 15, 0.2);
        transition: background 0.3s, transform 0.1s;
    }

        .btn-cadastrar:hover {
            background-color: var(--cor-principal-hover);
            transform: translateY(-1px);
        }

    @@media (max-width: 600px) {
        .paciente-container {
            padding: 15px;
        }

        .tabela-pacientes th, .tabela-pacientes td {
            padding: 8px 10px;
        }

        .link-nome-paciente {
            padding: 8px 10px;
        }
    }
</style>
