@page "/selecionarpaciente"
@using fisioClin.Models
@inject PacienteDAO pacienteDAO
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

@code {
    private List<Paciente> pacientes = new();
    private string nomeBusca = "";

    protected override void OnInitialized()
    {
        pacientes = pacienteDAO.ListarTodos();
    }

    private void FiltrarPacientes()
    {
        var todosPacientes = pacienteDAO.ListarTodos();

        if (string.IsNullOrWhiteSpace(nomeBusca))
        {
            pacientes = todosPacientes;
        }
        else
        {
            var termoDeBusca = nomeBusca;

            pacientes = todosPacientes
                .Where(p =>
                    p.Nome != null &&
                    p.Nome.Contains(termoDeBusca, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }

        StateHasChanged();
    }
}

<div class="paciente-container mt-4">
    <h3 class="titulo mb-4">Dados Pacientes</h3>

    <div class="barra-pesquisa mb-3">
        <div class="input-group">
            <span class="input-group-text">🔍</span>
            <input type="text" class="form-control campo-pesquisa" placeholder="Pesquisar Paciente"
                   @bind="nomeBusca" @bind:event="oninput" @onkeyup="FiltrarPacientes" />
        </div>
    </div>

    <table class="table tabela-pacientes">
        <thead>
            <tr>
                <th class="id-header">ID</th>
                <th class="nome-header">Nome do Paciente</th>
            </tr>
        </thead>
        <tbody>
            @if (pacientes == null || pacientes.Count == 0)
            {
                <tr>
                    <td colspan="2" class="text-center text-muted">Nenhum paciente encontrado.</td>
                </tr>
            }
            else
            {
                @foreach (var p in pacientes)
                {
                    <tr class="linha-paciente">
                        <td class="id-col">@p.Id</td>
                        <td class="nome-col-botao-wrapper">
                            <a href="/dadospaciente/@p.Id" class="link-nome-paciente">
                                @p.Nome
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-end mt-3">
        <a href="/cadastrarpaciente" class="btn-cadastrar">Cadastrar Paciente</a>
    </div>
</div>

<style>
