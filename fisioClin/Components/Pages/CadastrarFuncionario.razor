@page "/cadastrarfuncionario"
@using fisioClin.Models;
@inject FuncionariosDAO funcionarios

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Funcionários</title>

 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #ffffff; 
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: #6a0000;
        }

        .navbar-nav .nav-link {
            color: white !important;
            background-color: #8b0000;
            border-radius: 8px;
            margin-right: 10px;
            padding: 8px 16px;
            font-weight: 500;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #a00000;
            }

        /* Container do formulário */
        .container-custom {
            background-color: #fff;
            border-radius: 15px;
            padding: 40px;
            margin-top: 50px;
            box-shadow: 0 4px 25px rgba(0,0,0,0.15);
            max-width: 1150px;
        }

        h2 {
            color: #6a0000;
            font-weight: 600;
        }

        label {
            font-weight: 500;
            color: #333;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #ccc;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #8b0000;
                box-shadow: 0 0 5px rgba(139, 0, 0, 0.4);
            }

        .icon-area {
            display: flex;
            justify-content: center;
            align-items: center;
            background: radial-gradient(circle, #7a0b0b 0%, #400000 90%);
            border-radius: 50%;
            width: 90px;
            height: 90px;
            margin-left: auto;
        }

            .icon-area i {
                color: white;
                font-size: 35px;
            }

        .btn-cadastrar {
            background-color: #8b0000;
            color: white;
            border-radius: 8px;
            padding: 10px 30px;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-cadastrar:hover {
                background-color: #a00000;
            }

        .btn-excluir {
            background-color: #440000;
            color: white;
            border-radius: 8px;
            padding: 10px 30px;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-excluir:hover {
                background-color: #770000;
            }

    </style>
</head>

<body>

 

    <!-- CONTEÚDO -->
    <div class="container container-custom">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Cadastro de Funcionários</h2>
            <div class="icon-area">
                <i class="bi bi-person-vcard"></i>
            </div>
        </div>

        <form>

            <!-- Nome completo -->
            <div class="mb-3">
                <label class="form-label">Nome completo</label>
                <input type="text" class="form-control">
            </div>

            <!-- Linha 1 -->
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">CPF</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Cargo</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tipo de vínculo</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Senha de acesso</label>
                    <input type="password" class="form-control">
                </div>
            </div>

            <!-- Linha 2 -->
            <div class="row g-3 mt-1">
                <div class="col-md-3">
                    <label class="form-label">RG</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Especialidade</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Subespecialidade</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Telefone</label>
                    <input type="text" class="form-control">
                </div>
            </div>

            <!-- Linha 3 -->
            <div class="row g-3 mt-1">
                <div class="col-md-4">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Registro profissional</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Certificados</label>
                    <input type="file" class="form-control">
                </div>
            </div>

            <!-- Linha 4 -->
            <div class="row g-3 mt-1">
                <div class="col-md-3">
                    <label class="form-label">Data de Nascimento</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Data de contratação</label>
                    <input type="date" class="form-control">
                </div>
            </div>

            <!-- Botões -->
            <div class="d-flex justify-content-end mt-4 gap-3">
                <button type="submit" class="btn btn-cadastrar">
                    <i class="bi bi-check-circle"></i> Cadastrar
                </button>
                <button type="reset" class="btn btn-excluir">
                    <i class="bi bi-trash3"></i> Excluir
                </button>
            </div>
        </form>
    </div>

</body>
</html>
