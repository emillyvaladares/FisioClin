@page "/relatoriofinanceiro"

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Relatórios Financeiros</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h2 class="titulo-relatorio">Relatórios Financeiros</h2>

        <div class="filtro-container p-4 mt-4 rounded">
            <form class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="periodo" class="form-label">Período</label>
                    <input type="date" class="form-control" id="periodo">
                </div>

                <div class="col-md-5">
                    <label for="responsavel" class="form-label">Responsável pelo Lançamento</label>
                    <input type="text" class="form-control" id="responsavel" placeholder="Digite o nome">
                </div>

                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-filtrar">Filtrar</button>
                </div>
            </form>

            <div class="table-responsive mt-4">
                <table class="table table-bordered text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Data</th>
                            <th>Paciente</th>
                            <th>Responsável</th>
                            <th>Valor (R$)</th>
                        </tr>
                    </thead>
                    <tbody id="tabela-dados">
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<style>
    body {
        background-color: #f5f5f5;
        font-family: 'Segoe UI', sans-serif;
    }

    .titulo-relatorio {
        color: #7a1b1b;
        font-weight: bold;
    }

    .filtro-container {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .btn-filtrar {
        background-color: #7a1b1b;
        color: #fff;
        border: none;
    }

        .btn-filtrar:hover {
            background-color: #5e1515;
        }

    .table th,
    .table td {
        vertical-align: middle;
        font-size: 15px;
    }

</style>
