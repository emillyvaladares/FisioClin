@page "/visualizar_agenda/{Id:int}"

@using fisioClin.Models
@inject AgendaDAO agendaDAO
@inject SalaDAO salaDAO
@inject FuncionariosDAO funcionariosDAO
@inject PacienteDAO pacienteDAO
@inject TipoDAO tipoDAO
@inject NavigationManager Nav

@rendermode InteractiveServer

<PageTitle>Agenda</PageTitle>

@if (isLoading)
{
    <div class="text-center mt-5 fw-bold" style="color:#701a1a;">
        Carregando dados da agenda...
    </div>
}
else if (agenda == null)
{
    <div class="text-center mt-5 fw-bold" style="color:#701a1a;">
        Agenda não encontrada (ID: @Id)
    </div>
}
else
{
    <div class="container mt-4">

        <!-- TÍTULO -->
        <div class="d-flex align-items-center mb-4">
            <h3 class="fw-bold" style="color:#701a1a;">Dados da Agenda</h3>

            <input type="text"
                   class="form-control ms-3"
                   style="max-width: 80px;"
                   readonly
                   value="@agenda.Id" />

            <input type="text"
                   class="form-control ms-2"
                   readonly
                   value="@agenda.Data?.ToString("dd/MM/yyyy")" />
        </div>

        <!-- CARD PRINCIPAL -->
        <div class="card shadow-sm border-0">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-9">

                        <!-- DATA + HORÁRIO-->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Data</label>
                                <input type="text" class="form-control"
                                       readonly
                                       value="@agenda.Data?.ToString("dd/MM/yyyy")" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Horário</label>
                                <input type="text" class="form-control"
                                       readonly
                                       value="@agenda.Horario" />
                            </div>
                        </div>
                        <!-- TIPO + SALA -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Tipo</label>
                                <input type="text" class="form-control"
                                       readonly
                                       value="@nomeTipo" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Sala</label>
                                <input type="text" class="form-control"
                                       readonly
                                       value="@nomeSala" />
                            </div>
                        </div>

                        <!-- FISIOTERAPEUTA + PACIENTE -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Fisioterapeuta</label>
                                <input type="text" class="form-control"
                                       readonly
                                       value="@nomeFisio" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Paciente</label>
                                <input type="text" class="form-control"
                                       readonly
                                       value="@nomePaciente" />
                            </div>
                        </div>

                        <!-- OBSERVAÇÕES -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Observações</label>
                            <textarea class="form-control" rows="4" readonly>@agenda.Observacao</textarea>
                        </div>
                     
                        <div class="d-flex justify-content-end mt-4 gap-2">
                            <!-- BOTÃO EDITAR -->
                            <a class="btn btn-primary px-4"
                               style="background:#701a1a; border:none;"
                               href="/editar_agenda/@Id">
                                Editar Agenda
                            </a>
                            <!-- BOTÃO EXCLUIR -->
                            <button class="btn btn-danger px-4"
                               @onclick="Apagar">
                                Excluir Agenda
                            </button>
                        </div>
                       
                    </div>

                    <!-- ÍCONE PADRÃO -->
                    <div class="col-md-3 d-flex flex-column align-items-center mt-3 mt-md-0">
                        <i class="bi bi-calendar-check"
                           style="font-size: 130px; color: #701a1a;"></i>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Agenda? agenda;
    private bool isLoading = true;

    private string nomeSala = "";
    private string nomeFisio = "";
    private string nomePaciente = "";
    private string nomeTipo = "";

    protected override void OnInitialized()
    {
        agenda = agendaDAO.BuscarPorId(Id);

        if (agenda != null)
        {
            var sala = salaDAO.BuscarPorId(agenda.Id_Sala_fk ?? 0);
            nomeSala = sala?.Nome ?? "Não informado";

            var fisio = funcionariosDAO.BuscarPorId(agenda.Id_Funcionario_fk ?? 0);
            nomeFisio = fisio?.Nome ?? "Não informado";

            var pac = pacienteDAO.BuscarPorId(agenda.Id_Paciente_fk ?? 0);
            nomePaciente = pac?.Nome ?? "Não informado";

            var tipo = tipoDAO.BuscarPorId(agenda.Id_Tipo_fk ?? 0);
            nomeTipo = tipo?.Nome ?? "Não informado";
        }

        isLoading = false;
    }

    private void Apagar()
    {
        agendaDAO.Excluir(Id);
        Nav.NavigateTo("/visualizaragenda");
    }
}

<style>    
    :root {
        --cor-principal: #701a1a;
        --cor-principal-hover: #8b0000;
    }
</style>
