@page "/Agenda"

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background: #f4f4f1;
        }

        .container {
            max-width: 900px;
            margin: 30px auto;
            padding: 20px;
            background: #f4f4f1;
        }

        h1 {
            color: #600;
            font-size: 26px;
            margin-bottom: 20px;
        }

        .grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            background: #fff;
            padding: 30px;
            border-radius: 12px;
        }

        .card {
            background: #600;
            color: #fff;
            padding: 18px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
        }

            .card:hover {
                background: #800;
            }

            .card i {
                font-size: 22px;
            }
    </style>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <h1>Agenda</h1>

        <div class="grid">
            <div class="card">
                <i class="fas fa-calendar-alt"></i>
                Agendar sessões
            </div>
            <div class="card">
                <i class="fas fa-dollar-sign"></i>
                Integração com o financeiro
            </div>
            <div class="card">
                <i class="fas fa-check-circle"></i>
                Confirmação de presença
            </div>
            <div class="card">
                <i class="fas fa-folder-open"></i>
                Integração com o prontuário
            </div>
        </div>
    </div>
</body>
</html>
