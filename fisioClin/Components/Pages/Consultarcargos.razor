@page "/ConsultarCg"

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Consultar Cargos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f3f1f1;
        }

        .sidebar {
            background-color: #5b0000;
            width: 120px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
        }

   
        .content {
            margin-left: 130px;
            padding: 40px;
        }

        h3 {
            color: #5b0000;
            font-weight: 500;
            margin-bottom: 25px;
        }

        .search-box {
            background-color: #f0eded;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 30px;
        }

        .btn-custom {
            background-color: #5b0000;
            color: #fff;
            border-radius: 8px;
            padding: 8px 25px;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background-color: #8b0015;
                color: #fff;
            }

        
        .table th, .table td {
            vertical-align: middle;
        }

    </style>
</head>

<body>

    <div class="sidebar"></div>

   
    <div class="content">
        <h3>Consultar cargos</h3>

        <div class="search-box">
            <input type="text" class="form-control mb-3" placeholder="Pesquisar Cargos">
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
              
            </tbody>
        </table>

        <div class="text-end mt-3">
            <button class="btn btn-custom">Cadastrar Funcionário</button>
        </div>
    </div>

</body>
</html>
