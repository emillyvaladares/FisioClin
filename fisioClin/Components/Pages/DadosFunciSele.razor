        font-size: 1em;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s, color 0.2s;
        border-radius: 0;
        text-decoration: none;
        display: block;
    }

        .link-nome-funcionario:hover {
            background-color: var(--cor-fundo-linha-hover);
            color: var(--cor-principal);
        }

    .btn-cadastrar {
        background-color: var(--cor-principal);
        color: #fff;
        font-weight: 600;
        padding: 10px 25px;
        border-radius: 8px;
        text-decoration: none;
        border: none;
        box-shadow: 0 4px 8px rgba(107, 15, 15, 0.2);
        transition: background 0.3s, transform 0.1s;
    }

        .btn-cadastrar:hover {
            background-color: var(--cor-principal-hover);
            transform: translateY(-1px);
        }

    @@media (max-width: 600px) {
        .funcionario-container {
            padding: 15px;
        }

        .tabela-funcionarios th, .tabela-funcionarios td {
            padding: 8px 10px;
        }

        .link-nome-funcionario {
            padding: 8px 10px;
        }
    }
</style>
