@page "/consultarFuncionarios"
@using fisioClin.Models
@inject FuncionariosDAO FuncionariosDAO
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

@code {
    private List<Funcionarios> funcionarios = new();
    private string nomeBusca = "";

    protected override void OnInitialized()
    {
        funcionarios = FuncionariosDAO.ListarTodos();
    }

    private void FiltrarFuncionarios()
    {
        var todosFuncionarios = FuncionariosDAO.ListarTodos();

        if (string.IsNullOrWhiteSpace(nomeBusca))
        {
            funcionarios = todosFuncionarios;
        }
        else
        {
            var termoDeBusca = nomeBusca;

            funcionarios = todosFuncionarios
                .Where(f =>
                    f.Nome != null &&
                    f.Nome.Contains(termoDeBusca, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }

        StateHasChanged();
    }
}

<div class="funcionario-container mt-4">
    <h3 class="titulo mb-4">Dados Funcionários</h3>

    <div class="barra-pesquisa mb-3">
        <div class="input-group">
            <span class="input-group-text">🔍</span>
            <input type="text" class="form-control campo-pesquisa" placeholder="Pesquisar Funcionário"
                   @bind="nomeBusca" @bind:event="oninput" @onkeyup="FiltrarFuncionarios" />
        </div>
    </div>

    <table class="table tabela-funcionarios">
        <thead>
            <tr>
                <th class="id-header">ID</th>
                <th class="nome-header">Nome do Funcionário</th>
            </tr>
        </thead>
        <tbody>
            @if (funcionarios == null || funcionarios.Count == 0)
            {
                <tr>
                    <td colspan="2" class="text-center text-muted">Nenhum funcionário encontrado.</td>
                </tr>
            }
            else
            {
                @foreach (var f in funcionarios)
                {
                    <tr class="linha-funcionario">
                        <td class="id-col">@f.Id</td>
                        <td class="nome-col-botao-wrapper">
                            @* Navega para a página de detalhes do funcionário *@
                            <a href="/dadosfuncionario/@f.Id" class="link-nome-funcionario">
                                @f.Nome
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-end mt-3">
        @* Assumindo que a rota de cadastro é /cadastrofuncionario *@
        <a href="/cadastrofuncionario" class="btn-cadastrar">Cadastrar Funcionário</a>
    </div>
</div>

