@page "/visualizaragenda"

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Visualização de Agenda</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f6f4;
            color: #5a2328;
            font-family: 'Poppins', sans-serif;
        }

        .agenda-container {
            background-color: #fff6f2;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

        .agenda-header {
            font-weight: 600;
            color: #791c1c;
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #791c1c;
            border: none;
        }

            .btn-primary:hover {
                background-color: #a02828;
            }

        .horario {
            padding: 10px;
            border-radius: 8px;
            margin: 5px 0;
            color: #fff;
            font-weight: 500;
        }

        .sala1 {
            background-color: #d97b6c;
        }

        .sala2 {
            background-color: #8b7c79;
        }

        .sala3 {
            background-color: #cfa94d;
        }

        .sala4 {
            background-color: #aa6ea5;
        }
    </style>
</head>
<body class="p-4">

    <div class="container agenda-container" id="agendaContainer">
        <h4 class="agenda-header">Visualização de Agenda</h4>

        <div class="row g-3 mb-3">
            <div class="col-md-3">
                <label class="form-label">Sala</label>
                <select class="form-select">
                    <option selected>Selecione...</option>
                    <option>Sala 1</option>
                    <option>Sala 2</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Fisioterapeuta</label>
                <select class="form-select">
                    <option selected>Selecione...</option>
                    <option>Lucas Oliveira</option>
                    <option>Marcia Freire</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Paciente</label>
                <select class="form-select">
                    <option selected>Selecione...</option>
                    <option>Gustavo Silva</option>
                    <option>Helena Costa</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Tipo de sessão</label>
                <select class="form-select">
                    <option selected>Selecione...</option>
                    <option>Fisioterapia</option>
                    <option>Reabilitação</option>
                </select>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5>2 – 6 de ago. de 2021</h5>
            <button class="btn btn-primary">Nova entrada</button>
        </div>

        <div id="agendaVazia" class="text-center text-muted py-4 d-none">
            <p><em>Nenhum horário salvo.</em></p>
        </div>

        <div id="agendaConteudo" class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th>Horário</th>
                        <th>Seg 02/08</th>
                        <th>Ter 03/08</th>
                        <th>Qua 04/08</th>
                        <th>Qui 05/08</th>
                        <th>Sex 06/08</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>09:00</td>
                        <td class="sala1 text-center">Alice Ferreira<br><small>Sala 1</small></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>11:30</td>
                        <td></td>
                        <td class="sala2 text-center">Sartana<br><small>Majlis Batary</small></td>
                        <td></td>
                        <td></td>
                        <td class="sala3 text-center">Tomony<br><small>Ivana Martins</small></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-end">
            <button class="btn btn-primary">Editar</button>
        </div>
    </div>

    <script>
        // Simula se há ou não horários salvos
        const horariosSalvos = true; // altere para false para testar

        const agendaContainer = document.getElementById("agendaConteudo");
        const mensagemVazia = document.getElementById("agendaVazia");

        if (!horariosSalvos) {
            agendaContainer.classList.add("d-none");
            mensagemVazia.classList.remove("d-none");
        }
    </script>

</body>
</html>
