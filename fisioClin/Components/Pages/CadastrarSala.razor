@page "/cadastrarsala"

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Salas</title>

    <!-- Bootstrap e Ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #ffffff;
            font-family: 'Poppins', sans-serif;
        }

        h2 {
            color: #6a0000;
            font-weight: 600;
        }

        label {
            font-weight: 500;
            color: #333;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #ccc;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #8b0000;
                box-shadow: 0 0 5px rgba(139, 0, 0, 0.4);
            }

        .container-custom {
            background-color: #fff;
            border-radius: 15px;
            padding: 40px;
            margin-top: 50px;
            box-shadow: 0 4px 25px rgba(0,0,0,0.15);
            max-width: 800px;
        }

        .btn-cadastrar, .btn-alterar {
            background-color: #8b0000;
            color: white;
            border-radius: 8px;
            padding: 10px 30px;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-cadastrar:hover, .btn-alterar:hover {
                background-color: #a00000;
            }

        .d-flex-gap {
            gap: 15px;
        }
    </style>
</head>

<body>
    <div class="container container-custom">
        <h2 class="mb-4">Cadastrar Salas</h2>

        <form>
            <!-- Nome da sala -->
            <div class="mb-3">
                <label class="form-label">Nome da sala</label>
                <input type="text" class="form-control">
            </div>

            <!-- Linha 1 -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">Nº da sala</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Capacidade</label>
                    <input type="text" class="form-control">
                </div>
            </div>

            <!-- Linha 2 -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">Tipo de sala</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Disponibilidade</label>
                    <input type="text" class="form-control">
                </div>
            </div>

            <!-- Observações -->
            <div class="mb-3">
                <label class="form-label">Observações</label>
                <input type="text" class="form-control">
            </div>

            <!-- Botões -->
            <div class="d-flex justify-content-end d-flex-gap mt-4">
                <button type="button" class="btn btn-alterar">Alterar cadastro</button>
                <button type="submit" class="btn btn-cadastrar">Cadastrar</button>
            </div>
        </form>
    </div>
</body>
</html>
