@page "/salas"
@using fisioClin.Models
@inject SalaDAO SalaDAO
@inject NavigationManager NavigationManager

@rendermode InteractiveServer

@code {
    private List<Sala> salas = new();
    private string busca = "";

    protected override void OnInitialized()
    {
        salas = SalaDAO.ListarTodos();
    }

    private void Filtrar()
    {
        var todas = SalaDAO.ListarTodos();

        if (string.IsNullOrWhiteSpace(busca))
        {
            salas = todas;
        }
        else
        {
            salas = todas.Where(s =>
                (s.Nome != null && s.Nome.Contains(busca, StringComparison.OrdinalIgnoreCase)) ||
                (s.Numero != null && s.Numero.Contains(busca, StringComparison.OrdinalIgnoreCase)) ||
                (s.Tipo != null && s.Tipo.Contains(busca, StringComparison.OrdinalIgnoreCase))
            ).ToList();
        }
    }

    private void Excluir(int id)
    {
        SalaDAO.Excluir(id);
        salas = SalaDAO.ListarTodos();
    }
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-maroon">Consultar Salas</h3>

        <a href="/cadastrarsala" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Cadastrar
        </a>
    </div>

    <!-- Barra de Pesquisa -->
    <div class="input-group mb-4 shadow-sm">
        <span class="input-group-text bg-white">
            <i class="bi bi-search"></i>
        </span>
        <input type="text"
               class="form-control"
               placeholder="Pesquisar Sala (nome, número, tipo)"
               @bind="busca"
               @bind:event="oninput"
               @onkeyup="Filtrar" />
    </div>

    <!-- Tabela -->
    <div class="table-responsive shadow-sm rounded overflow-hidden">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="bg-maroon text-white">
                <tr>
                    <th style="width:80px;">ID</th>
                    <th>Nome</th>
                    <th>Número</th>
                    <th>Tipo</th>
                    <th style="width:120px;">Capacidade</th>
                    <th class="text-end" style="width:200px;">Ações</th>
                </tr>
            </thead>

            <tbody>
                @if (salas == null || salas.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Nenhuma sala encontrada.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var sala in salas)
                    {
                        <tr>
                            <td class="text-secondary">@sala.Id</td>

                            <td class="p-0">
                                <a href="/consultarsala/@sala.Id"
                                   class="d-block px-2 py-2 text-decoration-none text-dark fw-semibold">
                                    @sala.Nome
                                </a>
                            </td>

                            <td class="p-0">
                                 <a href="/consultarsala/@sala.Id"
                                   class="d-block px-2 py-2 text-decoration-none text-dark fw-semibold">
                                @sala.Numero
                                </a>
                            </td>
                            <td class="p-0">
                                 <a href="/consultarsala/@sala.Id"
                                   class="d-block px-2 py-2 text-decoration-none text-dark fw-semibold">
                                @sala.Tipo
                                </a>
                            </td>
                            <td class="p-0">
                                 <a href="/consultarsala/@sala.Id"
                                   class="d-block px-2 py-2 text-decoration-none text-dark fw-semibold">
                                @sala.Capacidade
                                </a>
                            </td>

                            <td class="text-end">
                                <a href="/editar_sala/@sala.Id" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <button class="btn btn-danger btn-sm" @onclick="() => Excluir(sala.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>

<style>
    .text-maroon {
        color: #6b0f0f;
    }

    .bg-maroon {
        background-color: #6b0f0f !important;
    }
</style>
