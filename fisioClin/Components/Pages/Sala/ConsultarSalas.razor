@page "/consultarsala/{Id:int}"
@using fisioClin.Models
@using FisioClin.Configs
@inject Conexao conexao

@code {
    [Parameter]
    public int Id { get; set; }

    private SalaDAO dao;
    private Sala sala = new Sala();

    protected override void OnInitialized()
    {
        dao = new SalaDAO(conexao);

        if (Id > 0)
        {
            var encontrada = dao.BuscarPorId(Id);
            if (encontrada != null)
                sala = encontrada;
        }
    }
}

<div class="container mt-4">

    <!-- Título -->
    <div class="d-flex align-items-center mb-4">
        <h3 class="fw-bold" style="color:#701a1a;">Dados da Sala</h3>

        <input type="text"
               class="form-control ms-3"
               style="max-width: 80px;"
               readonly
               value="@sala.Id" />

        <input type="text"
               class="form-control ms-2"
               readonly
               value="@sala.Nome" />
    </div>

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            <div class="row">
                <div class="col-md-9">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nome</label>
                        <input type="text" class="form-control" readonly value="@sala.Nome" />
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Nº da Sala</label>
                            <input type="text" class="form-control" readonly value="@sala.Numero" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Tipo</label>
                            <input type="text" class="form-control" readonly value="@sala.Tipo" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Capacidade</label>
                            <input type="text" class="form-control" readonly value="@sala.Capacidade" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Disponibilidade</label>
                        <input type="text" class="form-control" readonly value="@sala.Disponibilidade" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Observações</label>
                        <textarea class="form-control" rows="4" readonly>@sala.Observacao</textarea>
                    </div>

                </div>

                <!-- Ícone -->
                <div class="col-md-3 d-flex flex-column align-items-center mt-3 mt-md-0">
                    <i class="bi bi-building"
                       style="font-size: 130px; color: #701a1a;"></i>
                </div>

            </div>

        </div>
    </div>

</div>
