@page "/consultarsala"
@using fisioClin.Models
@using FisioClin.Configs
@inject Conexao conexao




    <style>
        body {
            background-color: #f7f7f7;
            font-family: 'Poppins', sans-serif;
        }

        .container-custom {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            margin-top: 50px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #6a0000;
            font-weight: 600;
            margin-bottom: 25px;
        }

        table {
            border-radius: 10px;
            overflow: hidden;
        }

        thead {
            background-color: #6a0000;
            color: white;
        }

        tbody tr:hover {
            background-color: #f3dcdc;
            transition: 0.3s;
        }

        .btn-voltar {
            background-color: #8b0000;
            color: white;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: 600;
            text-decoration: none;
            transition: 0.3s;
        }

            .btn-voltar:hover {
                background-color: #a00000;
                color: #fff;
            }
    </style>



    <div class="container container-custom">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Consultar Salas</h2>
            <a href="/salas" class="btn-voltar">Voltar</a>
        </div>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nº da Sala</th>
                    <th>Tipo</th>
                    <th>Capacidade</th>
                    <th>Disponibilidade</th>
                    <th>Observações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sala in lista)
                {
                    <tr>
                        <td>@sala.Id</td>
                        <td>@sala.Numero</td>
                        <td>@sala.Tipo</td>
                        <td>@sala.Capacidade</td>
                        <td>@sala.Disponibilidade</td>
                        <td>@sala.Observacao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

@code {
    private SalaDAO dao;
    private List<Sala> lista; 

    protected override void OnInitialized()
    {
        dao = new SalaDAO(conexao);
        lista = dao.ListarTodos();
    }
}