
@page "/dadosfuncionario/{id:int}"
@using fisioClin.Models;
@inject FuncionariosDAO FuncionariosDAO
@inject NavigationManager NavigationManager


@code {
    [Parameter]
    public int id { get; set; }

    private Funcionarios funcionario;
    private bool isLoading = true;

    protected override void OnInitialized()
    {
        // Garante que o ID é válido antes de buscar
        if (id > 0)
        {
            funcionario = FuncionariosDAO.BuscarPorId(id);
        }
        isLoading = false;
    }

    private void Voltar()
    {
        // Navega de volta para a lista de funcionários
        NavigationManager.NavigateTo("/funcionario");
    }

    private void Salvar()
    {
        // Lógica de salvar (inserir ou atualizar)
        // Você precisará de um método para atualizar no DAO (FuncionariosDAO.Atualizar(funcionario))
        Console.WriteLine($"Funcionário {funcionario.Nome} salvo/atualizado.");
    }
}

@if (isLoading)
{
    <div class="loading-message">Carregando dados do funcionário...</div>
}
else if (funcionario == null)
{
    <div class="not-found-message">Funcionário não encontrado. ID: @id</div>
}
else
{
    <div class="funcionario-details-container container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4 header-section">
            <button class="btn-back" @onclick="Voltar">
                <i class="bi bi-arrow-left"></i> Voltar para a Lista
            </button>
            <h3 class="titulo mb-0">Dados do Funcionário: <span class="text-id">ID @funcionario.Id</span></h3>
        </div>

        <div class="form-section">
            <h4 class="mb-4">Informações Pessoais e Contrato</h4>
            <EditForm Model="@funcionario" OnValidSubmit="Salvar">
                <DataAnnotationsValidator />
                <div class="row g-3">

                    @* Primeira Linha: Nome Completo
                    <div class="col-12">
                        <label for="nome" class="form-label">Nome completo</label>
                        <InputText id="nome" @bind-Value="funcionario.Nome" class="form-control" />
                    </div>

                    @* Segunda Linha: CPF, RG, Data Nasc *@
                    <div class="col-md-4">
                        <label for="cpf" class="form-label">CPF</label>
                        <InputText id="cpf" @bind-Value="funcionario.Cpf" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label for="rg" class="form-label">RG</label>
                        <InputText id="rg" @bind-Value="funcionario.Rg" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label for="nasc" class="form-label">Data de Nascimento</label>
                        @* Assumindo que DataNascimento é DateTime? no seu modelo *@
                        <InputDate id="nasc" @bind-Value="funcionario.DataNascimento" class="form-control" />
                    </div>

                    @* Terceira Linha: Email, Telefone *@
                    <div class="col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <InputText id="email" @bind-Value="funcionario.Email" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label for="telefone" class="form-label">Telefone</label>
                        <InputText id="telefone" @bind-Value="funcionario.Telefone" class="form-control" />
                    </div>

                    @* Quarta Linha: Especialidade e Registro *@
                    <div class="col-md-6">
                        <label for="especialidade" class="form-label">Especialidade</label>
                        <InputText id="especialidade" @bind-Value="funcionario.Especialidade" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label for="registro" class="form-label">Registro Profissional</label>
                        <InputText id="registro" @bind-Value="funcionario.Registro" class="form-control" />
                    </div>

                    @* Quinta Linha: Vínculo e Contratação *@
                    <div class="col-md-6">
                        <label for="vinculo" class="form-label">Tipo de Vínculo</label>
                        <InputText id="vinculo" @bind-Value="funcionario.TipoVinculo" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label for="dataContratacao" class="form-label">Data de Contratação</label>
                        @* Assumindo que DataContratacao é DateTime? no seu modelo *@
                        <InputDate id="dataContratacao" @bind-Value="funcionario.DataContratacao" class="form-control" />
                    </div>

                    @* Sexta Linha: Endereço (Simplificado) - CEP, Bairro, Rua, Número (se existirem no seu Funcionarios Model) *@
                    @* Nota: Eu retirei os campos de endereço (Rua, Bairro, Número, CEP, Sexo) porque eles não estão no seu DAO de Funcionários. Se estiverem no model, adicione-os aqui! *@

                    @* Sétima Linha: Certificados e Laudos - Devem ser tratados separadamente para upload de arquivos *@
                    <div class="col-12">
                        <label for="certificados" class="form-label">Certificados (Caminho do Arquivo/Descrição)</label>
                        <InputText id="certificados" @bind-Value="funcionario.Certificados" class="form-control" />
                    </div>

                </div>

                <div class="text-end mt-4 button-group">
                    @* Adicionei um botão de Edição/Exclusão para consistência *@
                    <button type="submit" class="btn-action btn-salvar">Salvar Edições</button>
                    <button type="button" class="btn-action btn-excluir">Excluir</button>
                </div>
                <ValidationSummary />
            </EditForm>
        </div>
    </div>
}


