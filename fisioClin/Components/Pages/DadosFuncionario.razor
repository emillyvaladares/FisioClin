@page "/DadosFunci"
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dados Funcionários</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><button class="nav-link">Pacientes</button></li>
                    <li class="nav-item"><button class="nav-link">Funcionário</button></li>
                    <li class="nav-item"><button class="nav-link">Salas</button></li>
                    <li class="nav-item"><button class="nav-link">Prontuários</button></li>
                    <li class="nav-item"><button class="nav-link">Agenda</button></li>
                    <li class="nav-item"><button class="nav-link">Financeiro</button></li>
                    <li class="nav-item"><button class="nav-link">Cargos</button></li>
                </ul>
                <a href="#" class="btn btn-outline-light">⎋</a>
            </div>
        </div>
    </nav>

    <div class="container container-box">
        <h3 class="mb-4">Dados Funcionários</h3>

   
        <div class="input-group mb-3">
            <span class="input-group-text">Pesquisar Funcionário</span>
            <input type="text" class="form-control" id="inputFuncionario" placeholder="Digite o nome do funcionário">
            <button class="btn btn-outline-secondary" id="btnBuscar" type="button">🔍</button>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Cargo</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody id="tabelaFuncionarios">
      
            </tbody>
        </table>

        <div class="d-flex justify-content-end">
              <a href="/funcionario" class="custom-btn text-decoration-none">CONSULTAR FUNCIONARIOS</a>
        </div>
    </div>

    
    <div class="modal fade" id="modalFuncionario" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#800000; color:white;">
                    <h5 class="modal-title">Detalhes do Funcionário</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="detalhesFuncionario">
        
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f4f1f1;
        }

        .navbar-custom {
            background-color: #600000;
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: #fff;
            }

        .nav-item button {
            background-color: #800000;
            border: none;
            border-radius: 10px;
            margin: 0 5px;
            padding: 10px 20px;
            color: #fff;
        }

        .container-box {
            background-color: #f0eded;
            padding: 30px;
            border-radius: 10px;
            margin-top: 20px;
        }

        .btn-cadastrar {
            background-color: #800000;
            color: white;
            border-radius: 8px;
        }

            .btn-cadastrar:hover {
                background-color: #600000;
            }

        .table th {
            background-color: #fff;
        }

       

       
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    
        document.getElementById('btnBuscar').addEventListener('click', () => {
          const nome = document.getElementById('inputFuncionario').value.trim();

          if (nome === '') {
            alert('Digite um nome para pesquisar.');
            return;
          }

          
          document.getElementById('tabelaFuncionarios').innerHTML = `
            <tr>
              <td colspan="4" class="text-center text-muted">Buscando no banco de dados...</td>
            </tr>
          `;
        });


        function mostrarResultados(funcionarios) {
          const tabela = document.getElementById('tabelaFuncionarios');
          tabela.innerHTML = '';

          if (funcionarios.length === 0) {
            tabela.innerHTML = '<tr><td colspan="4" class="text-center text-muted">Nenhum funcionário encontrado.</td></tr>';
            return;
          }

          funcionarios.forEach(f => {
            const linha = document.createElement('tr');
            linha.innerHTML = `
              <td>${f.id}</td>
              <td>${f.nome}</td>
              <td>${f.cargo}</td>
              <td><button class="btn btn-sm btn-outline-dark ver-detalhes" data-id="${f.id}">Ver</button></td>
            `;
            tabela.appendChild(linha);
          });


          document.querySelectorAll('.ver-detalhes').forEach(btn => {
            btn.addEventListener('click', e => abrirModalFuncionario(e.target.dataset.id));
          });
        }


        function abrirModalFuncionario(id) {
     

          const modalBody = document.getElementById('detalhesFuncionario');
          modalBody.innerHTML = `
            <p><strong>ID:</strong> ${id}</p>
            <p><strong>Nome:</strong> (carregar do banco)</p>
            <p><strong>Cargo:</strong> (carregar do banco)</p>
            <p><strong>Email:</strong> (carregar do banco)</p>
            <p><strong>Telefone:</strong> (carregar do banco)</p>
          `;

          const modal = new bootstrap.Modal(document.getElementById('modalFuncionario'));
          modal.show();
        }
    </script>
</body>
</html>

